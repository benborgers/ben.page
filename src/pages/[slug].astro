---
import Layout from "../layouts/Layout.astro";
import Prose from "../components/Prose.astro";
import Video from "../components/Video";

import type { GetStaticPaths } from "astro";
import { getReader } from "../lib/getReader";
import { DocumentRenderer } from "@keystatic/core/renderer";

export const getStaticPaths = (async () => {
  const reader = getReader();
  const posts = (await reader.collections.posts.all()).filter(
    (post) => post.entry.published && post.entry.date
  );

  return posts.map((post) => ({
    params: {
      slug: post.slug,
    },
    props: {
      post: post.entry,
    },
  }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const content = await post.content();
---

<Layout title={post.title} ogImage={post.cover_image ?? undefined}>
  <div class="mt-12">
    <div
      class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-x-6"
    >
      <h1 class="text-2xl font-serif text-gray-800">
        {post.title}
      </h1>
      <p class="text-gray-400 sm:text-right font-handwriting text-lg shrink-0">
        {
          new Date(post.date!).toLocaleString("en-US", {
            timeZone: "UTC",
            month: "long",
            day: "numeric",
            year: "numeric",
          })
        }
      </p>
    </div>

    {
      post.cover_image && (
        <div class="mt-6 bg-white p-2 rounded-lg shadow">
          <img src={post.cover_image} alt="" class="rounded-md" />
        </div>
      )
    }

    <Prose class={post.cover_image ? "mt-6" : "mt-8"}>
      <DocumentRenderer document={content} componentBlocks={{ video: Video }} />
    </Prose>
  </div>
</Layout>
